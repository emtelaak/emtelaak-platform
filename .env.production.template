# ============================================
# Emtelaak Platform - Production Environment Variables
# ============================================
# 
# SECURITY NOTICE:
# - Never commit this file with actual values to Git
# - Use a secrets manager (AWS Secrets Manager, HashiCorp Vault)
# - Rotate secrets regularly (every 90 days minimum)
# - Use different secrets for each environment
#
# ============================================

# Application
NODE_ENV=production
PORT=3000
VITE_APP_ID=emtelaak-platform

# Database
# SECURITY: Use strong password, rotate every 90 days
DATABASE_URL=mysql://username:password@host:3306/emtelaak

# JWT Authentication
# SECURITY: Generate with: openssl rand -base64 64
# MUST be at least 32 characters, rotate every 90 days
JWT_SECRET=REPLACE_WITH_STRONG_SECRET_MINIMUM_32_CHARS

# Cookie Secret
# SECURITY: Generate with: openssl rand -base64 64
COOKIE_SECRET=REPLACE_WITH_STRONG_SECRET_MINIMUM_32_CHARS

# OAuth (if used)
OAUTH_SERVER_URL=https://auth.emtelaak.com
OWNER_OPEN_ID=admin_user_openid

# Manus API (if used)
BUILT_IN_FORGE_API_URL=https://api.manus.im
BUILT_IN_FORGE_API_KEY=REPLACE_WITH_ACTUAL_API_KEY

# SendGrid Email Service
# SECURITY: Rotate API key every 90 days
SENDGRID_API_KEY=REPLACE_WITH_SENDGRID_API_KEY
SENDGRID_FROM_EMAIL=noreply@emtelaak.com
SENDGRID_FROM_NAME=Emtelaak Platform

# AWS S3 (for file uploads)
# SECURITY: Use IAM roles when possible, rotate keys every 90 days
AWS_ACCESS_KEY_ID=REPLACE_WITH_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=REPLACE_WITH_AWS_SECRET_KEY
AWS_REGION=us-east-1
AWS_S3_BUCKET=emtelaak-uploads

# CORS Allowed Origins (comma-separated)
ALLOWED_ORIGINS=https://emtelaak.com,https://www.emtelaak.com,https://admin.emtelaak.com

# Rate Limiting
# Redis URL for distributed rate limiting (recommended for production)
REDIS_URL=redis://localhost:6379

# Monitoring & Logging
# SECURITY: Keep these keys secure
SENTRY_DSN=REPLACE_WITH_SENTRY_DSN
DATADOG_API_KEY=REPLACE_WITH_DATADOG_KEY

# Security Settings
# Maximum concurrent sessions per user
MAX_SESSIONS_PER_USER=5

# Session timeout in seconds (default: 24 hours)
SESSION_TIMEOUT=86400

# Enable 2FA requirement for admin users
REQUIRE_2FA_FOR_ADMINS=true

# Enable IP-based rate limiting
ENABLE_IP_RATE_LIMITING=true

# Enable geolocation-based access controls
ENABLE_GEO_BLOCKING=false
BLOCKED_COUNTRIES=

# File Upload Settings
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# Database Encryption
# SECURITY: Generate with: openssl rand -hex 32
DB_ENCRYPTION_KEY=REPLACE_WITH_64_CHAR_HEX_KEY

# Backup Settings
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30

# Compliance
GDPR_ENABLED=true
DATA_RETENTION_DAYS=2555  # 7 years for financial records

# ============================================
# How to Generate Secure Secrets:
# ============================================
# 
# JWT_SECRET and COOKIE_SECRET:
#   openssl rand -base64 64
#
# DB_ENCRYPTION_KEY:
#   openssl rand -hex 32
#
# Random password:
#   openssl rand -base64 32
#
# ============================================
