# ===========================================
# EMTELAAK PLATFORM - ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ===========================================
# DATABASE
# ===========================================
# MySQL/TiDB Cloud connection string
# For TiDB Cloud: mysql://user:password@gateway.region.prod.aws.tidbcloud.com:4000/emtelaak?ssl={"rejectUnauthorized":true}
DATABASE_URL=mysql://username:password@gateway01.eu-central-1.prod.aws.tidbcloud.com:4000/emtelaak?ssl={"rejectUnauthorized":true}

# ===========================================
# AUTHENTICATION
# ===========================================
# Secret key for JWT signing (min 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters

# ===========================================
# AWS S3 STORAGE
# ===========================================
# IAM user credentials with S3 access
AWS_ACCESS_KEY_ID=AKIAIOSFODNN7EXAMPLE
AWS_SECRET_ACCESS_KEY=wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY
AWS_REGION=us-east-1

# S3 bucket for file uploads
S3_BUCKET_NAME=emtelaak-uploads

# CloudFront distribution domain (optional, for CDN)
CLOUDFRONT_DOMAIN=d1234567890.cloudfront.net

# ===========================================
# EMAIL (SENDGRID)
# ===========================================
# SendGrid API key for transactional emails
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxx
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# ===========================================
# APPLICATION SETTINGS
# ===========================================
# Environment: development, production
NODE_ENV=production

# Server port
PORT=3000

# Frontend URL (for email links, CORS)
FRONTEND_URL=https://yourdomain.com

# ===========================================
# PUSH NOTIFICATIONS (OPTIONAL)
# ===========================================
# VAPID keys for web push notifications
# Generate with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:admin@yourdomain.com

# ===========================================
# VITE FRONTEND VARIABLES
# ===========================================
# These are exposed to the frontend (prefix with VITE_)
VITE_APP_TITLE=Emtelaak Property Fractions
VITE_APP_LOGO=/brand/logos/logo-en-trimmed.png
